<div class="container" style="margin-top: 7em">
  <ul>
    {{#each articles}}
    {{#unless saved}}
    <div class="card mb-3" style="max-width: 100%;">
      <div class="row no-gutters">
        <div class="col-md-4 d-flex align-items-stretch ml-md-3 ml-lg-0" style="max-width: 100%">
          <img src="{{image}} {{value}}" class="card-img" alt="{{title}} {{value}}">
        </div>
        <div class="col-md-8">
          <div class="card-body ml-md-3 ml-lg-0">
            <h5 class="card-title">{{title}} {{value}}</h5>
            <p class="card-text">{{summary}} {{value}}</p>
            <a href="{{link}} {{value}}" class="btn btn-link mx-auto ml-sm-3 ml-md-0" style="height: 100%; border: 0">Read More</a>
            {{> art-block}}
          </div>
        </div>
      </div>
    </div>
    {{/unless}}
    {{/each}}
  </ul>
</div>